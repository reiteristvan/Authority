@using IdentityServer.Services.Dto
@using IdentityServer.Web.Infrastructure.HtmlHelpers
@model IEnumerable<ProductSimpleDto>

@{
    ViewBag.Title = "Developer Dashboard";
}

<h3>Your products</h3>

<ul>
    @foreach (ProductSimpleDto product in Model)
    {
        <li>
            @Html.RestLink(product.Name, "products/details/{0}", product.Id)
        </li>
    }
</ul>

<h3>Create a new Product</h3>

@Html.RestLink("New product", "products/new")