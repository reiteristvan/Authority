@using Authority.Web.Infrastructure.HtmlHelpers
@model IEnumerable<Authority.Services.Dto.ProductSimpleDto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublic)
        </th>
        <th>
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPublic)
        </td>
        <td>
            @Html.RestLink("Edit", "products/edit/{0}", item.Id)
        </td>
        <td>
            <div>
                @using (Html.BeginForm("TogglePublish/" + item.Id, "Product"))
                {
                    string style = "btn btn-" + (item.IsPublic ? "danger" : "success");
                    <button class="@style">Publish</button>
                }
            </div>
        </td>
    </tr>
}

</table>
